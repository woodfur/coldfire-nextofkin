{
    "compilerOptions": {
      "types": ["mocha", "chai"],
      "typeRoots": ["./node_modules/@types"],
      "lib": ["es2020"],
      "module": "commonjs",
      "target": "es2020",
      "esModuleInterop": true,
      "strict": true,
      "resolveJsonModule": true,
      "baseUrl": ".",
      "paths": {
        "*": ["node_modules/*"]
      },
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "allowSyntheticDefaultImports": true
    },
    "include": ["tests/**/*", "target/types/**/*"],
    "exclude": ["node_modules"]
  }